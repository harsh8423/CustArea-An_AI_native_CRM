# =====================================================
# CustArea Backend Environment Variables
# Copy this file to .env and fill in your actual values
# =====================================================

# Server Configuration
PORT=8000
NODE_ENV=development

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/custarea
# Or use individual connection params:
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=yourpassword
PGDATABASE=custarea

# JWT Secret (Legacy - for backward compatibility)
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# =====================================================
# SUPABASE CONFIGURATION (Required for OTP Auth)
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =====================================================
# GOOGLE OAUTH (Required for Gmail Integration)
# =====================================================
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# =====================================================
# ENCRYPTION (Required for storing OAuth tokens securely)
# =====================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-generate-with-command-above

# =====================================================
# AWS SES Configuration (For domain email)
# =====================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com

# =====================================================
# Redis Configuration
# =====================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =====================================================
# MongoDB (for AI Agent)
# =====================================================
MONGODB_URI=mongodb://localhost:27017/custarea

# =====================================================
# Azure Speech Services (for voice calls)
# =====================================================
SPEECH_KEY=your-azure-speech-key
SPEECH_REGION=eastus

# =====================================================
# OpenAI (for AI features)
# =====================================================
OPENAI_API_KEY=your-openai-api-key

# =====================================================
# Twilio (for WhatsApp and phone)
# =====================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# =====================================================
# Other Services
# =====================================================
# Add any other service credentials here
